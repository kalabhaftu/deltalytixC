{
  "crons": [
    {
      "path": "/api/cron/daily-anchors",
      "schedule": "0 0 * * *"
    }
  ],
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "github": {
    "buildCommand": "npm run build"
  }
}